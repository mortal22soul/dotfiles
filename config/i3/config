                active_workspace   #282A3600 #44475A00 #F8F8F2
                inactive_workspace #282A3600 #282A3600 #BFBFBF
                urgent_workspace   #FF5555 #FF5555 #F8F8F2
                binding_mode       #FF5555 #FF5555 #F8F8F2
        }
}

